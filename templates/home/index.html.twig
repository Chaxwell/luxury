                        </li>
                        {# <!-- slide 1 end --> #}

                        {# <!-- slide 2 start --> #}
                        <li
                            data-easein="Power4.easeInOut" data-easeout="Power4.easeInOut" data-fsmasterspeed="1500" data-fsslotamount="7" data-fstransition="fade" data-masterspeed="2000" data-rotate="0" data-saveperformance="off" data-slotamount="default" data-transition="parallaxtoleft">

                            {# <!-- MAIN IMAGE --> #}
                            <img
                            src="{{ asset('assets/img/bg3.jpg') }}" alt="" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat" data-bgparallax="10" class="rev-slidebg" data-no-retina>

                            {# <!-- LAYER NR. 1 --> #}
                            <div class="tp-caption rev-heading tp-resizeme" data-fontsize="['60','55','50','45']" data-height="none" data-lineheight="['60','60','55','50']" data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;" data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;" data-responsive_offset="on" data-splitin="none" data-splitout="none" data-start="800" data-transform_idle="o:1;" data-transform_in="y:[100%];z:0;rX:0deg;rY:0;rZ:0;sX:1;sY:1;skX:0;skY:0;opacity:0;s:600;e:Power4.easeInOut;" data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;s:1000;e:Power2.easeInOut;" data-voffset="['-80','-80','-80','-80']" data-whitespace="nowrap" data-width="none" data-x="center" data-y="center" style="z-index: 5; white-space: nowrap;">
                                <h1 class="rev-heading text-extrabold white-text text-center">{{ 'misc.recruitmentAndServices'|trans }}</h1>
                            </div>

                            {# <!-- LAYER NR. 2 --> #}
                            <div class="tp-caption tp-resizeme rev-subheading" data-fontsize="['20','20','17','15']" data-height="none" data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;" data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;" data-responsive_offset="on" data-splitin="none" data-splitout="none" data-start="1000" data-transform_idle="o:1;" data-transform_in="y:[100%];z:0;rX:0deg;rY:0;rZ:0;sX:1;sY:1;skX:0;skY:0;opacity:0;s:600;e:Power4.easeInOut;" data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;s:1000;e:Power2.easeInOut;" data-voffset="['0','0','10','30']" data-whitespace="nowrap" data-width="['1200', '800', '600', '400']" data-x="center" data-y="center" style="z-index: 6; white-space: nowrap;">
                                <h4 class="white-text text-center">{{ 'misc.bringingJobSeekersAndEmployersTogether'|trans }}</h4>
                            </div>

                            {# <!-- LAYER NR. 3 --> #}
                            <div class="tp-caption tp-resizeme rev-btn" data-height="none" data-hoffset="['0','0','0','0']" data-mask_in="x:0px;y:[100%];s:inherit;e:inherit;" data-mask_out="x:inherit;y:inherit;s:inherit;e:inherit;" data-responsive_offset="on" data-splitin="none" data-splitout="none" data-start="1200" data-style_hover="cursor:default;" data-transform_idle="o:1;" data-transform_in="y:[100%];z:0;rX:0deg;rY:0;rZ:0;sX:1;sY:1;skX:0;skY:0;opacity:0;s:600;e:Power4.easeInOut;" data-transform_out="y:[100%];s:1000;e:Power2.easeInOut;s:1000;e:Power2.easeInOut;" data-voffset="['130','130','140','170']" data-whitespace="nowrap" data-width="none" data-x="['center','center','center','center']" data-y="['middle','middle','middle','middle']" style="z-index: 7; white-space: nowrap;">
