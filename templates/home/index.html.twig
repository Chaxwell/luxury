                            </div>

                        </li>
                        {# <!-- slide 2 end --> #}

                    </ul>
                </div>
                {# <!-- end revolution slider --> #}
            </section>
            {# <!-- end of slider wrapper --> #}

            {# <!-- Page Content--> #}
            {# <!--<section class="full-width promo-box brand-bg ptb-50">--> #}
            {# <!--<div class="container">--> #}
            {# <!----> #}
            {# <!--</div>--> #}
            {# <!--</section>--> #}
                <section class="ptb-50 brand-bg"> <div class="container">
                    <div class="row">
                        <div class="col-md-12 mb-40">
                            <div class="promo-info">
                                <span class="white-text">{{ 'misc.whetherEmployerOrCandidate'|trans }}</span>
                                <h3 class="white-text text-bold text-uppercase no-margin">{{ 'misc.weHaveSolutionForYou'|trans|upper }}</h3>
                            </div>
                            <div class="promo-btn">
                                <a href="{{ path('home_contact') }}" class="btn border secondary waves-effect waves-light">{{ 'navigation.contactUs'|trans }}</a>
                            </div>
                        </div>
                    </div>

                    <hr class="mt-10 mb-50">

                    <div class="text-center">
                        <h2 class="section-title primary-text">{{ 'misc.whoWeAre'|trans }}</h2>
                        <p class="section-sub white-text">{{ 'misc.leadingProfessionalRecruitmentConsultancy'|trans }}</p>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="carousel slide boot-slider" data-ride="carousel" id="project-slider">
                                <ol class="carousel-indicators">
                                    <li class="active" data-slide-to="0" data-target="#project-slider"></li>
                                    <li data-slide-to="1" data-target="#project-slider"></li>
                                </ol>

                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img class="img-responsive" src="{{ asset('assets/img/slide1.jpg') }}" alt="">
                                    </div>
                                    <div class="item">
                                        <img class="img-responsive" src="{{ asset('assets/img/slide2.jpg') }}" alt="">
                                    </div>
                                </div>

                                <a class="left carousel-control" data-slide="prev" href="#project-slider" role="button">
                                    <span aria-hidden="true" class="fa fa-angle-left"></span>
                                    <span class="sr-only">{{ 'navigation.previous'|trans }}</span>
                                </a>
                                <a class="right carousel-control" data-slide="next" href="#project-slider" role="button">
                                    <span aria-hidden="true" class="fa fa-angle-right"></span>
                                    <span class="sr-only">{{ 'navigation.next'|trans }}</span>
                                </a>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="primary-text">{{ 'misc.ourPhilosophy'|trans }}</h3>
                            <p class="white-text">{{ 'misc.ourRoleWorkWithEmployersAndJobSeekers'|trans }}</p>
                        </div>

                        <div class="text-center">
                            <a href="{{ path('home_company') }}" class="btn gradient secondary waves-effect waves-light mt-40">{{ 'navigation.moreAboutUs'|trans }}</a>
                        </div>
                    </div>
                </div>
            </section>

            <section class="cta-candidate bg-fixed bg-cover overlay dark-5 padding-top-70 padding-bottom-50">
                <div class="container">
                    <div class="row">
                        <div class="valign-wrapper text-center">
                            <div class="hero-intro valign-cell">
                                <h2 class="tt-headline clip is-full-width no-margin">
                                    <span>{{ 'misc.youAre'|trans }}
                                    </span>
                                    <span class="tt-words-wrapper">
                                        <b class="is-visible">{{ 'misc.commercial'|trans }}</b>
                                        <b>{{ 'misc.creative'|trans }}</b>
                                        <b>{{ 'misc.marketingAndPR'|trans }}</b>
                                        <b>{{ 'misc.technology'|trans }}</b>
                                        <b>{{ 'misc.fashionAndLuxury'|trans }}</b>
                                        <b>{{ 'misc.retailSales'|trans }}</b>
                                    </span>
                                </h2>
                                <h3 class="c-secondary mb-30 no-margin">{{ 'misc.signUpAndApply'|trans }}</h3>
                                <p class="white-text section-sub">{{ 'misc.eachOneOfYourSkillPreciousToUs'|trans }}</p>

                                <a href="{{ path('auth_register') }}" class="btn border secondary waves-effect waves-light mt-40">{{ 'navigation.joinUs'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section-padding gray-bg" id="job-offers">
                <div class="container">
                    <div class="text-center mb-40">
                        <h2 class="section-title">{{ 'misc.jobOffers'|trans }}</h2>
                        <p class="section-sub">{{ 'misc.justLikeOurCandidatesWeOfferQualityPositions'|trans }}</p>
                    </div>
                    <div class="portfolio-container">

                        <ul class="portfolio-filter brand-filter text-center">
                            <li class="active waves-effect waves-light" data-group="all">{{ 'misc.all'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Commercial">{{ 'misc.commercial'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Retail sales">{{ 'misc.retailSales'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Creative">{{ 'misc.creative'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Technology">{{ 'misc.technology'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Marketing & PR">{{ 'misc.marketingAndPR'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Fashion & luxury">{{ 'misc.fashionAndLuxury'|trans }}</li>
                            <li class=" waves-effect waves-light" data-group="Management & HR">{{ 'misc.managementAndHR'|trans }}</li>
                        </ul>
                        <div class="portfolio portfolio-with-title col-2 gutter mt-30">
                            {% for jobOffer in jobOffers %}
                            <div class="portfolio-item" data-groups='["all", "{{ jobOffer.jobCategory }}"]'>
                                <div class="portfolio-wrapper">
                                    <div class="card job-card">
                                        <div class="card-content">
                                            <span class="title">
                                                <span class="card-title">{{ jobOffer.title }}</span>
                                                <span class="ref grey-text">Ref. {{ jobOffer.reference }}</span>
                                            </span>
                                            <div class="metas mb-20">
                                                <div class="meta">
                                                    <i class="material-icons">&#xE53E;</i>{{ jobOffer.salary }} &euro;
                                                </div>
                                                <div class="meta">
                                                    <i class="material-icons">&#xE916;</i>{{ jobOffer.closedAt ? jobOffer.closedAt|date('d/m/Y') : 'N/A' }}
                                                </div>
                                                <div class="meta">
                                                    <i class="material-icons">&#xE55F;</i>{{ jobOffer.location }}
                                                </div>
                                            </div>
                                            <p class="truncate-text">{{ jobOffer.description }}</p>
                                        </div>
                                        <div class="card-action">
                                            <a class="btn btn-md primary border waves-effect waves-dark" href="{{ path('jobs_show', {id: jobOffer.id}) }}">Details</a>
                                            <a class="btn btn-md primary waves-effect waves-light" href="#!">Apply</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                            <div class="no-item"></div>
                        </div>

                        <div class="text-center">
                            <a href="{{ path('jobs_index') }}" class="btn gradient secondary waves-effect waves-light mt-30">{{ 'navigation.viewAllJobOffers'|trans }}</a>
                        </div>
                    </div>
                </div>
            </section>

        </div>

    </div>
{% endblock %}
