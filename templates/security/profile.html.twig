{% extends "base.html.twig" %}

{% block body %}
    <div
        class="base">

        <!-- Page -->
        <div
            class="page">

            <!-- Page Header-->
            <section class="page-title page-title-bg fixed-bg overlay dark-5 padding-top-160 padding-bottom-80">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="white-text">{{ 'navigation.yourProfile'|trans }}</h2>
                            <span class="white-text">{{ 'navigation.persoAndProInfo'|trans }}</span>
                            <ol class="breadcrumb">
                                <li>
                                    <a href="{{ path('home_index') }}">{{ 'navigation.home'|trans }}</a>
                                </li>
                                <li class="active">{{ 'navigation.profile'|trans }}</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>


            <!-- Page Content-->
            <section class="gray-bg">
                <div class="container">
                    <div class="row">
                        <div class="score-container">
                            <h4>
                                <img src="https://i.imgur.com/s9bPVaK.gif" height="80px" width="201px">
                                &nbsp;&nbsp; {{ 'profile.profileComplete'|trans }}
                            </h4>
                            <div class="c100 p100 small complete ">
                                <span>100%</span>
                                <div class="slice">
                                    <div class="bar"></div>
                                    <div class="fill"></div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </section>

            <form accept-charset="UTF-8" action="#!" data-parsley-validate="" enctype="multipart/form-data" id="candidateForm" method="POST" role="form">
            <input name="_token" type="hidden" value="UYfchy67WuTVzhSstPK1RDZEIfgqpKCcLnLyhf8a">
                <section class="section-padding">
                    <div class="container">
                        <div class="row">
                            <h3 class="text-extrabold">{{ 'profile.personalInfo'|trans }}</h3>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="input-field">
                                    <select id="gender" name="gender">
                                        <option value="">Choose an option...</option>
                                        <option value="male">Male</option>
                                        <option selected="selected" value="female">Female</option>
                                        <option value="transgender">Transgender</option>
                                    </select>
                                    <label class="active" for="gender">{{ 'profile.gender'|trans }}</label>
                                </div>
                            </div>
                            <div class="clearfix visible-sm"></div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="input-field">
                                    <input class="form-control" id="first_name" name="first_name" required type="text" value="">
                                    <label for="first_name">{{ 'profile.firstName'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="input-field">
                                    <input class="form-control" id="last_name" name="last_name" required type="text" value="">
                                    <label for="last_name">{{ 'profile.lastName'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="input-field">
                                    <input id="current_location" name="current_location" required="required" type="text" value="">
                                    <label for="current_location">{{ 'profile.currentLocation'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-8">
                                <div class="input-field">
                                    <input id="address" name="address" type="text" value="">
                                    <label for="address">{{ 'profile.address'|trans }}</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="file-field input-field" style="margin-top: 32px;">
                                    <div class="btn btn-lg primary waves-effect waves-light">
                                        <span>
                                            <i class="material-icons">insert_photo</i>
                                            {{ 'profile.photo'|trans }}</span>
                                        <input accept=".pdf,.jpg,.doc,.docx,.png,.gif" id="photo" name="photo" size="20000000" type="file">
                                    </div>

                                    <div class="existing-file">
                                        <a href="#!" target="_blank">
                                            <i class="material-icons">&#xE24D;</i>
                                            profil_picture.jpg</a>
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" placeholder="Upload your ID photo" readonly type="text">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-8">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-6">
                                        <div class="input-field">
                                            <input id="country" name="country" type="text" value="">
                                            <label for="country">{{ 'profile.country'|trans }}</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-6">
                                        <div class="input-field">
                                            <input id="nationality" name="nationality" type="text" value="">
                                            <label for="nationality">{{ 'profile.nationality'|trans }}</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-6">
                                        <div class="input-field">
                                            <input class="datepicker" id="birth_date" name="birth_date" type="text" value="">
                                            <label for="birth_date">{{ 'profile.birthDate'|trans }}</label>
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-sm-6">
                                        <div class="input-field">
                                            <input id="birth_place" name="birth_place" type="text" value="">
                                            <label for="birth_place">{{ 'profile.birthPlace'|trans }}</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-40">
                            <h3 class="text-extrabold">{{ 'profile.profilePro'|trans }}</h3>
                            <div class="col-xs-12 col-sm-6">

                                <div class="card card-panel passport">
                                    <div class="file-field input-field">
                                        <div class="btn btn-lg primary waves-effect waves-light">
                                            <span>
                                                <i class="material-icons">&#xE24D;</i>
                                                {{ 'profile.passport'|trans }}</span>
                                            <input accept=".pdf,.jpg,.doc,.docx,.png,.gif" id="passport" name="passport" size="20000000" type="file">
                                        </div>
                                        <div class="existing-file">
                                            <a href="#!" target="_blank">
                                                <i class="material-icons">&#xE24D;</i>
                                                passeport.jpg</a>
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" placeholder="Upload your passport" readonly type="text">
                                        </div>
                                    </div>

                                    <div class="file-field input-field">
                                        <div class="btn btn-lg primary waves-effect waves-light">
                                            <span>
                                                <i class="material-icons">&#xE24D;</i>
                                                {{ 'profile.resume'|trans }}</span>
                                            <input accept=".pdf,.jpg,.doc,.docx,.png,.gif" id="cv" name="cv" size="20000000" type="file">
                                        </div>

                                        <div class="existing-file">
                                            <a href="#!" target="_blank">
                                                <i class="material-icons">&#xE24D;</i>
                                                CV.pdf</a>
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" placeholder="Upload your Curriculum Vitae" readonly type="text">
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6">
                                <div class="col-xs-12 col-sm-12">
                                    <div class="input-field" style="margin-top: 5px;">
                                        <select data-placeholder="Type in or Select job sector you would be interested in." id="job_sector" multiple name="job_sector[]">
                                            <option value="">Choose an option...</option>
                                            <option value="">job sector</option>
                                        </select>
                                        <label class="active" for="job_sector">{{ 'profile.interestJobSector'|trans }}</label>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12">
                                    <div class="input-field">
                                        <select id="experience" name="experience" required="required">
                                            <option value="">Choose</option>
                                            <option value="3m">0 - 6 month</option>
                                            <option value="6m">6 month - 1 year</option>
                                            <option value="1y">1 - 2 years</option>
                                            <option value="2y">2+ years</option>
                                            <option selected="selected" value="5y">5+ years</option>
                                            <option value="10y">10+ years</option>
                                        </select>
                                        <label class="active" for="experience">{{ 'profile.experience'|trans }}</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12">
                                <div class="input-field">
                                    <textarea class="materialize-textarea" cols="50" id="description" name="description" rows="10"></textarea>
                                    <label for="description">{{ 'profile.holderDescription'|trans }}</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="section-padding gray-bg">
                    <div class="container">
                        <div class="row">
                            <h3 class="text-extrabold">{{ 'profile.luxuryAccount'|trans }}</h3>
                            <div class="col-xs-12 col-sm-4">
                                <div class="input-field">
                                    <input id="email" name="email" required="required" type="email" value="">
                                    <label for="email">{{ 'profile.email'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <div class="input-field">
                                    <input id="password" name="password" type="password" value="">
                                    <label for="password">{{ 'profile.password'|trans }}</label>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-4">
                                <div class="input-field">
                                    <input id="password_repeat" name="password_repeat" type="password" value="">
                                    <label for="password_repeat">{{ 'profile.passwordValidation'|trans }}</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 mt-40 mb-80 delete-account">
                                <a class="btn btn-block btn-lg waves-effect waves-light" href="#!" onclick="return prompt('Please Type \'Delete my account\' to delete your K-Yachting Services account:') == 'Delete my account'">
                                    <i class="material-icons">&#xE872;</i>{{ 'profile.deleteAccount'|trans }}</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <a class="btn btn-block btn-lg border primary waves-effect waves-light" href="#!">
                                    <i class="fa fa-long-arrow-left"></i>
                                    {{ 'profile.backHome'|trans }}</a>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-4">
                                <button class="btn btn-block btn-lg gradient secondary waves-effect waves-light" type="submit">
                                    <span>
                                        <strong>UPDATE</strong>
                                        NOW</span>
                                </button>
                            </div>
                        </div>

                    </div>
                </section>
            </form>

        </div>

    </div>
{% endblock %}
