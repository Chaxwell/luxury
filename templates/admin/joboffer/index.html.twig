{% extends "admin.html.twig" %}

{% block title %}Candidates |
    {{ parent() }}
{% endblock %}

{% block body %}
    <main class="col-md-9 ml-sm-auto col-lg-10 px-4" role="main">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">{{ 'admin.candidates'|trans }}</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <button class="btn btn-sm btn-outline-secondary" type="button">Share</button>
                    <button class="btn btn-sm btn-outline-secondary" type="button">Export</button>
                </div>
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button">
                    <span data-feather="calendar"></span>
                    This week
                </button>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="float-right my-2">
            <a href="{{ path('admin_new_candidate') }}" class="btn btn-dark">Add a candidate
                <span class="big">&CirclePlus;</span>
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>{{ 'admin.jobOfferTitle'|trans }}</th>
                        <th>{{ 'admin.companyName'|trans }}</th>
                        <th>{{ 'admin.contactName'|trans }}</th>
                        <th>{{ 'admin.contactEmail'|trans }}</th>
                        <th>{{ 'admin.contactPhoneNumber'|trans }}</th>
                        <th>{{ 'admin.status'|trans }}</th>
                        <th>{{ 'admin.registerDate'|trans }}</th>
                        <th>{{ 'admin.closureDate'|trans }}</th>
                        <th>{{ 'admin.note'|trans }}</th>
                        <th>{{ 'admin.actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% set confirmDelete = 'admin.confirmDelete'|trans %}
                    {% for jobOffer in jobOffers %}
                        <tr> {# TODO: Relier les tables dans la BDD  #}
                            <td>{{ jobOffer.title ? jobOffer.title : 'N/A' }}</td>
                            <td>{{ candidate.companyName ? candidate.companyName : 'N/A' }}</td>
                            <td>{{ candidate.email ? candidate.email : 'N/A' }}</td>
                            <td>{{ candidate.currentLocation ? candidate.currentLocation : 'N/A' }}</td>
                            <td>{{ candidate.jobCategory ? candidate.jobCategory|capitalize : 'N/A' }}</td>
                            <td>{{ candidate.availability ? 'Yes' : 'No' }}</td>
                            <td>{{ candidate.createdAt|date("d/m/Y H:i:s", "Europe/Paris") }}</td>
                            <td data-id="{{ candidate.id }}">
                                <button class="btn p-0">
                                    <i data-feather="bookmark"></i>
                                </button>
                            </td>
                            <td>
                                {% if candidate.resume %}
                                <a target="_blank" href="{{ asset('assets/uploads/profile/resume/' ~ candidate.resume) }}">{{ 'admin.resume'|trans }} <i data-feather="file-text"></i></a>
                                {% elseif candidate.passport %}
                                <a target="_blank" href="#">{{ 'admin.passport'|trans }} <i data-feather="book"></i></a>
                                {% else %}
                                N/A
                                {% endif %}
                            </td>
                            <td class="d-flex justify-content-between">
                                <a href="{{ path('admin_edit_candidate', {id: candidate.id}) }}">
                                    <button class="btn p-0">
                                        <i data-feather="edit"></i>
                                    </button>
                                </a>
                                <form method="POST" action="{{ path('admin_delete_candidate', {id: candidate.id}) }}" onsubmit="return confirm('{{ confirmDelete }}');">
                                    <button class="btn p-0" type="submit">
                                        <i data-feather="x-circle"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}
