{% extends "admin.html.twig" %}

{% block body %}
    <main class="col-md-9 ml-sm-auto col-lg-10 px-4" role="main">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">{{ 'admin.editClient'|trans }}</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group mr-2">
                    <button class="btn btn-sm btn-outline-secondary" type="button">Share</button>
                    <button class="btn btn-sm btn-outline-secondary" type="button">Export</button>
                </div>
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button">
                    <span data-feather="calendar"></span>
                    This week
                </button>
            </div>
        </div>

        {% if form_errors(form) %}
        <div class="alert alert-danger py-3 px-3 my-3">
            {{ form_errors(form) }}
        </div>
        {% endif %}

        <form action="{{ path('admin_edit_client', {id: client.id}) }}" autocomplete="off" class="mb-5" method="POST">
            <div class="form-row">
                <div class="form-group col-4">
                    {{ form_label(form.companyName, 'admin.companyName')}}
                    {{ form_widget(form.companyName, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="form-group col-4">
                    {{ form_label(form.companyType, 'admin.companyType')}}
                    {{ form_widget(form.companyType, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="col-4"></div>
                <div class="form-group col-2">
                    {{ form_label(form.contactName, 'admin.contactName')}}
                    {{ form_widget(form.contactName, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="form-group col-3">
                    {{ form_label(form.contactJob, 'admin.contactJob')}}
                    {{ form_widget(form.contactJob, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="form-group col-3">
                    {{ form_label(form.contactEmail, 'admin.contactEmail')}}
                    {{ form_widget(form.contactEmail, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="col-4"></div>
                <div class="form-group col-3">
                    {{ form_label(form.contactPhoneNumber, 'admin.contactPhoneNumber')}}
                    {{ form_widget(form.contactPhoneNumber, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="form-group col-4">
                    {{ form_label(form.note, 'admin.note')}}
                    {{ form_widget(form.note, {attr: {class: 'form-control'}}) }}
                </div>

                {{ form_widget(form._token) }}

                <div class="buttons col-12 offset-md-4 row">
                    <div class="px-2">
                        <a class="btn btn-outline-dark" href="{{ path('admin_clients') }}">{{ 'admin.cancel'|trans }}</a>
                    </div>
                    <div class="px-2">
                        <button class="btn btn-outline-dark px-5" type="submit">{{ 'admin.submit'|trans }}</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
{% endblock %}
